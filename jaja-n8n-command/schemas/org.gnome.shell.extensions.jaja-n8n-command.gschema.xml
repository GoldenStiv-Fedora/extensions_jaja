<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.gnome.shell.extensions.jaja-n8n-command" path="/org/gnome/shell/extensions/jaja-n8n-command/">
    <key name="n8n-url" type="s">
      <default>'https://your-n8n-instance.com/webhook'</default>
      <summary>n8n Webhook URL</summary>
      <description>Полный URL вебхука n8n (включая https://)</description>
    </key>

    <key name="send-on-enter" type="b">
      <default>true</default>
      <summary>Отправка по Enter</summary>
      <description>Если включено, команда отправляется по Enter</description>
    </key>

    <key name="button-color" type="s">
      <default>'#4CAF50'</default>
      <summary>Цвет кнопки</summary>
      <description>Цвет кнопки отправки (CSS hex)</description>
    </key>

    <key name="show-send-notify" type="b">
      <default>true</default>
      <summary>Уведомление при отправке</summary>
      <description>Показывать уведомление о факте отправки команды</description>
    </key>
  </schema>
</schemalist>
